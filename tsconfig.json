{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2018",
      "es2017",
      "es2016"
    ],                             
    "allowJs": true,               
    "sourceMap": true, 
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,              
    "noUnusedParameters": true,          
    "noImplicitReturns": true,      

    "baseUrl": "./src",
    "types": [
      "node",
      "jest"
    ],                           
    "esModuleInterop": true,
    "experimentalDecorators": true,   
    "emitDecoratorMetadata": true,    
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./dist/",
    "./**/*.spec.ts"
  ]
}
