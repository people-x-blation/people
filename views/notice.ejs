  <h2 id="notice_header" >공지사항</h2>
  <% if(admin) { %>
  <div id="notice_write">
      <h3>공지 작성</h3>
    <form action="auth/notice_write" method="POST">
        <label for="notice_title_input">제목</label>
        <input type="text" name="title" id="notice_title_input">
        <label for="notice_contents_input">내용</label>
        <textarea name="contents" id="notice_contents_input"> </textarea>
        <button>공지 작성하기</button>
    </form>
  </div>  
  <% } %>
  <% for(let item in article) { %>
    <div class="container notice_table">
        <h3><%=article[item].title%></h3>
        <span><%=article[item].create_at.toISOString()%></span>
        <hr />
        <p><%-article[item].contents%></p>
        <% if(admin) { %>
        <form action="auth/notice_delete" method="POST">
            <input type="hidden" name="notinum" value="<%=article[item].notinum%>">
            <button id="notice_delete_btn">삭제하기</button>
        </form>
        <% } %>
    </div>
  <% } %>


