    <div class="container">
        <div id="read_top" class="read_content_wrapper">
            <img id="read_setting" onclick="read_displaySetting()" src="/images/dots_menu.svg"></img>
        </div>
        <div class="read_content_wrapper">
            <h2 id="read_title"><%=articleTable.board.title%></h2>

            <table class="read_info_table">
                <tr>
                    <th>닉네임</th>
                    <td><%=articleTable.board.nickname%></td>
                </tr>
                <tr>
                    <th>수혈자 혈액형</th>
                    <td><%=(articleTable.board.blood === 'none') ? `미지정 혈액형(요청자 본인 : ${articleTable.board.my_blood})` : articleTable.board.blood%>
                    </td>
                </tr>
                <tr>
                    <th>필요 헌혈 종류</th>
                    <td><%=(articleTable.board.type == null) ? '미지정' : typeTable[articleTable.board.type]%>
                    </td>
                </tr>
                <tr>
                    <th>지역</th>
                    <td><%=articleTable.board.location%></td>
                </tr>
                <tr>
                    <th>병원</th>
                    <td><%=articleTable.board.hospital%></td>
                </tr>
                <tr>
                    <th>등록일자</th>
                    <td><%=articleTable.board.created_at%></td>
                </tr>
            </table>
            <p id="read_content_text"><%-articleTable.board.contents%></p>
            <% if(user) { %>
            <% if(articleTable.board.usernum !== whoAmI) {%>
            <% if(!alreay_part) { %>
            <form id="read_like_button" action="../participate" method="POST">
                <input type="hidden" name="boardnum" value="<%=participants.boardnum%>">
                <input type="hidden" name="request_usernum" value="<%=participants.request_usernum%>">
                <input type="hidden" name="part_usernum" value="<%=participants.part_usernum%>">
                <button id="participation">현재 <%=articleTable.board.num_part%>명이 도움을 주고
                    있습니다.<br />지정헌혈에 동참하시려면 이 버튼을 눌러주세요.</button>
            </form>
            <% } else { %>
            <form id="read_like_button">
                <button id="participation" disabled>이미 참가하셨습니다.</button>
            </form>
            <% } }%>
            <% } else { %>
            <span class="read_pls_login">로그인을 해야 해당 헌혈글에 참여의사를 표시할 수 있습니다.</span>
            <% } %>


        </div>
        <div id="read_comment" class="read_content_wrapper">
            <% if(user) { %>
            <span id="read_comment_label">참여 / 응원 댓글 작성</span>
            <div class="read_comment_write">
                <input type="hidden" id="read_comment_boardnum" name="boardnum" value="<%=articleTable.board.boardnum%>" />
                <input type="hidden" id="read_comment_usernum" name="usernum" value="<%=whoAmI%>" />
                <input id="read_comment_form" type="text" name="contents" />
                <button id="read_comment_submit">작성</button>
            </div>
            <% } %>
            <% if(articleTable.reply.length > 0){ %>
            <div id='wrapper'>
                <% for(let item=0; item<articleTable.reply.length; item++ ){ %>
                <div class="read_comment_wrapper">
                    <div class="read_comment_user"><%=articleTable.reply[item].replier %></div>
                    <p class="read_comment_content"><%=articleTable.reply[item].content %></p>
                    <div class="read_comment_setting">
                        <% if(whoAmI != null && articleTable.reply[item].usernum == whoAmI) { %>
                        <form action="../comment_destroy" method="POST">
                            <input type="hidden" name="comment_num" value="<%=articleTable.reply[item].comment_num%>">
                            <button>삭제</button>
                        </form>
                        <% } %>
                    </div>
                </div>
                <% }}%>
            </div>
        </div>
    </div>

