    <script>

        $('#participation').click(function (e) {
            e.preventDefault();

        })


        function Confirm(title, msg, $true, $false, $link) { /*change*/
            var $content =
                "<div class='dialog-ovelay'>" +
                "<div class='dialog'><header>" +
                " <h3> " + title + " </h3> " +
                "<i class='fa fa-close'></i>" +
                "</header>" +
                "<div class='dialog-msg'>" +
                " <p> " + msg + " </p> " +
                "<span class='participants_del_direction'>*지정헌혈 요청 상황이 종료될 시, 개인정보가 더이상 지정헌혈 요청자에게 제공되지 않습니다.</span>" +
                "</div>" +
                "<footer>" +
                "<div class='controls'>" +
                " <button class='button button-danger doAction'>" + $true + "</button> " +
                " <button class='button button-default cancelAction'>" + $false + "</button> " +
                "</div>" +
                "</footer>" +
                "</div>" +
                "</div>";
            $('body').prepend($content);
            $('.doAction').click(function () {
                $('#read_like_button').submit();
                $(this).parents('.dialog-ovelay').fadeOut(500, function () {
                    $(this).remove();
                });
            });
            $('.cancelAction, .fa-close').click(function () {
                $(this).parents('.dialog-ovelay').fadeOut(500, function () {
                    $(this).remove();
                });
            });

        }
        $('#participation').click(function () {
            Confirm('헌혈 참여 확인', '지정헌혈 요청자의 원활한 혈액 수급에 도움을 드리고자 <br/> 헌혈자의 닉네임, 연락처, 지역, 혈액형 정보가 지정헌혈 요청자에게 전달됩니다.<br/>-- 생명을 살리는 일에 동참해주세요 --', '확인', '취소', "https://www.google.com.eg"); /*change*/
        });

    </script>
